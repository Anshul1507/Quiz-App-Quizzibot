<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_image"
    tools:context=".Results">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_image"
    tools:context=".Results">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_margin="15dp"
        />
    <TextView
        android:id="@+id/about_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Results"
        android:fontFamily="serif-monospace"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_marginTop="25dp"/>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/about_text_view"
        android:background="#000000"
        android:layout_margin="15dp"
        />

    <TextView
        android:id="@+id/title_text"
        android:text="Result_Text"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/line"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/title_text"
        android:background="#000000"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Correct_Answers"
        android:text="Correct Answers :"
        android:layout_below="@id/total_ques"
        android:layout_margin="25dp"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Incorrect_Answers"
        android:text="Incorrect Answers : "
        android:layout_below="@id/Correct_Answers"
        android:layout_margin="25dp"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/total_ques"
        android:text="Total Questions : 10"
        android:layout_below="@id/line2"
        android:layout_margin="25dp"
        android:textSize="25sp"
        android:textColor="#000000"/>

    <Button
        android:id="@+id/retake_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:onClick="retake_quiz"
        android:background="@android:color/holo_purple"
        android:text="Retake Quiz"/>



</RelativeLayout>
</ScrollView>

